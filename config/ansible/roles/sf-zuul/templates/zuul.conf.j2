[gearman]
server=zuul.{{ fqdn }}

[gearman_server]
start=true
log_config=/etc/zuul/gearman-logging.conf

[zuul]
layout_config=/etc/zuul/layout.yaml
log_config=/etc/zuul/logging.conf
pidfile=/var/run/zuul/zuul.pid
state_dir=/var/lib/zuul
status_url={{ zuul_pub_url }}
job_name_in_report=true
report_times=true

[merger]
git_dir=/var/lib/zuul/git
git_user_email=zuul@{{ fqdn }}
git_user_name=zuul
zuul_url={{ zuul_pub_url }}p
log_config=/etc/zuul/merger-logging.conf

{% if not logs['disabled'] %}
[swift]
{% if logs['swift_logsexport_container'] %}default_container={{ logs['swift_logsexport_container'] }}
{% endif %}
{% if logs['swift_logsexport_logserver_prefix'] %}default_logserver_prefix={{ logs['swift_logsexport_logserver_prefix'] }}
{% endif %}
{% if logs['swift_logsexport_authurl'] %}authurl={{ logs['swift_logsexport_authurl'] }}
{% endif %}
{% if logs['swift_logsexport_x_storage_url'] %}X-Storage-Url={{ logs['swift_logsexport_x_storage_url'] }}
{% endif %}
{% if logs['swift_logsexport_username'] %}user={{ logs['swift_logsexport_username'] }}
{% endif %}
{% if logs['swift_logsexport_tenantname'] %}tenant_name={{ logs['swift_logsexport_tenantname'] }}
{% endif %}
{% if logs['swift_logsexport_password'] %}key={{ logs['swift_logsexport_password'] }}
{% endif %}
{% if logs['swift_logsexport_authversion'] %}auth_version={{ logs['swift_logsexport_authversion'] }}
{% endif %}
{% if logs['swift_logsexport_x_tempurl_key'] %}X-Account-Meta-Temp-Url-Key={{ logs['swift_logsexport_x_tempurl_key'] }}
{% endif %}
{% if logs['swift_logsexport_send_tempurl_key'] %}Send-Temp-Url-Key={{ logs['swift_logsexport_send_tempurl_key'] }}
{% endif %}
{% endif %}

[connection gerrit]
driver=gerrit
server=gerrit.{{ fqdn }}
# baseurl is only use to fetch git refs on diff url than server.
# Using baseurl we cannot modify url zuul report to user
baseurl={{ gerrit_pub_url }}
user=jenkins
sshkey=/var/lib/zuul/.ssh/id_rsa

{% for conn in gerrit_connections %}{% if "disabled" not in conn or not conn["disabled"] %}
[connection {{ conn['name'] }}]
driver=gerrit
server={{ conn['hostname'] }}
baseurl={{ conn['puburl'] }}
user={{ conn['username'] }}
sshkey=/var/lib/zuul/.ssh/id_rsa

{% endif %}{% endfor %}

[connection smtp]
driver=smtp
server=localhost
port=25
default_from=zuul@{{ fqdn }}
default_to=admin@{{ fqdn }}
